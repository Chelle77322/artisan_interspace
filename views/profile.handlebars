<div class="row">
  <div class="col-auto">
    <h2 class = "h2"><span class = "decorate">W</span>elcome, {{name}} {{email}}
     
    </h2>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <h3 class = "h3">New Artisan Post:</h3>

    <form class="new-art-form">
      <div class="form-group">
        <label for="artisan-name">Artist Name:</label>
        <input class="form-input" type="text" place holder ="Please enter artist name" id="artisan-name" name="artisan-name" />
      </div>
      
      <div class="form-group">
        <label for="artisan-description">Description:</label>
        <textarea class="form-input" id="artisan-description" placeholder" Please enter description" name="artisan-description"></textarea>
      </div>
      
        <button type="submit" class="btn btn-primary">Create Artwork</button>
      
    </form>
  </div>

  {{#if artisans.length}}
  <div class="col-md-6 project-list">
    <h3>Latest Artwork:</h3>

    {{#each artisans as |artisan|}}
    <div class="row">
      <div class="col-md-6">
        <h4><a href="/artisan/{{artisan.id}}">{{artisan.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{artisan.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="jss/profile.js"></script>
