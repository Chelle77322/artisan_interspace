<div class="col-md-6">
    <h3 class="h3">Create New Art</h3>
    <form class ="card-body" id="art_post">
      <div class = "form-group">
        <label for="artisan_name" class="form-label">Name</label>
        <input type="text" id="artisan-name" name="artisan-name" class="form-input"  autofocus = "true"/>
    </div>
    <div class = "file-upload">
      <label for = "artisan_image" class = "form-label">ArtWork</label>
      <input type = "file" id = "artisan_image" name = "artisan_image">
    </div>
      <div class = "form-group">
        <label for="artisan_description" class="form-label">Description</label>
        <input type="text" id="artisan-description" name="artisan-description" class="form-input"  autofocus = "true"/>
      </div>

        <div class = "form-group">
        <label for="artisan_date_created" class="form-label">Date Created</label>
        <input type="datetime" id="artisan-date_created" name="artisan-date_created" class="form-input"  autofocus = "true"/>
      </div>

      

        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>

